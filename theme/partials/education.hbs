{{#if resume.education.length}}
<section id="education" class="education">
  {{#each resume.education}}
  <div class="item">
    {{#if @first}}
    <h2>Education</h2>
    {{/if}}
    <header>
      {{#if institution}}
        <h3 class="name">
        {{#if studyType}}
          <span class="studyType">{{studyType}}</span>
        {{/if}}
        {{#if area}}
          <span class="area">{{area}},</span>
        {{/if}}
        <span class="institution">{{institution}}</span>
        </h3>
      {{/if}}
      <small class="dates">
        {{#if startDate}}
        <span class="dates">{{date startDate}}</span>
        {{/if}}
        {{#if endDate}}
        <span class="dates"> - {{date endDate}}</span>
        {{else}}
        <span class="endDate"> - Present</span>
        {{/if}}
      </small>
    </header>
    <div class="qualification">
      {{#if courses.length}}
      <strong class="courses-header">Courses</strong>
      <ul class="courses">
        {{#each courses}}
        <li>{{{.}}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
  {{/each}}
  <br />
</section>
{{/if}}
